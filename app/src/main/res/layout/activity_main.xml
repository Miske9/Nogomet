<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFF00"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#800080"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewNaslov"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="70dp"
            android:text="Nogometni klub"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="135dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:itemIconTint="@color/lavender"
        app:itemTextColor="@color/lavender"
        app:menu="@menu/nav_menu" />

    <Button
        android:id="@+id/btnIgraci"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="161dp"
        android:layout_marginTop="100dp"
        android:background="#800080"
        android:text="IGRAÄŒI"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnUtakmice"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_below="@id/btnIgraci"
        android:layout_alignParentStart="true"
        android:layout_marginStart="160dp"
        android:layout_marginTop="100dp"
        android:background="#800080"
        android:text="UTAKMICE"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btnTablica"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_below="@id/btnUtakmice"
        android:layout_alignParentStart="true"
        android:layout_marginStart="160dp"
        android:layout_marginTop="100dp"
        android:background="#800080"
        android:text="TABLICA"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btnAbout"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_below="@id/btnTablica"
        android:layout_alignParentStart="true"
        android:layout_marginStart="160dp"
        android:layout_marginTop="100dp"
        android:background="#800080"
        android:text="O NAMA"
        android:textSize="20sp"/>
</RelativeLayout>
